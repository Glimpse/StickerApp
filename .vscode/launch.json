    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch API Gateway",
            "program": "${workspaceRoot}\\apigateway\\app.js"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to StickerApp",
            "port": 5858,
            "address": "localhost",
            "localRoot": "${workspaceRoot}/stickerapp/",
            "remoteRoot": "/usr/src/app/"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to ApiGateway",
            "address": "localhost",
            "localRoot": "${workspaceRoot}/apigateway/",
            "remoteRoot": "/usr/src/app/",
            "port": 5859
        }
    ]
}