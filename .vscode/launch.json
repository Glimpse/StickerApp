{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Client-Server",
            "configurations": [
                "Launch Chrome",
                "Launch Sticker App"
            ]
        },
         {
            "name": "Client-Server Gateway",
            "configurations": [
                "Launch Chrome",
                "Launch Sticker App Gateway"
            ]
        }
    ],
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Container",
            "address": "localhost",
            "port": 5858,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/usr/src/app"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug a Gulp Task",
            "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
            "args": [
                "populate-mongodb"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Sticker App",
            "program": "${workspaceRoot}/server/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Sticker App Gateway",
            "program": "${workspaceRoot}/apigateway/app.js"
        }
    ]
}